{
  "alwaysThinkingEnabled": false,
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "uv run $HOME/source/dotfiles/claude/custom-perms.py",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Glob",
      "Grep",
      "Read(//**)",
      "Task",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Read(//**/*.key)",
      "Read(//**/*.pem)",
      "Read(//**/.env)"
    ]
  },
  "statusLine": {
    "command": "npx -y ccstatusline@latest",
    "padding": 0,
    "type": "command"
  }
}
