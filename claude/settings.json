{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash(ack:*)",
      "Bash(basename:*)",
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(cut:*)",
      "Bash(date:*)",
      "Bash(df:*)",
      "Bash(diff:*)",
      "Bash(dirname:*)",
      "Bash(du:*)",
      "Bash(echo:*)",
      "Bash(env:*)",
      "Bash(file:*)",
      "Bash(git config --get:*)",
      "Bash(git config --list:*)",
      "Bash(git stash list:*)",
      "Bash(grep:*)",
      "Bash(groups:*)",
      "Bash(head:*)",
      "Bash(hostname:*)",
      "Bash(id:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(node --version:*)",
      "Bash(pre-commit:*)",
      "Bash(printenv:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(python --version:*)",
      "Bash(readlink:*)",
      "Bash(realpath:*)",
      "Bash(rg:*)",
      "Bash(ss:*)",
      "Bash(stat:*)",
      "Bash(tail:*)",
      "Bash(tr:*)",
      "Bash(tree:*)",
      "Bash(type:*)",
      "Bash(uname:*)",
      "Bash(uniq:*)",
      "Bash(uptime:*)",
      "Bash(wc:*)",
      "Bash(which:*)",
      "Bash(whoami:*)",
      "Glob",
      "Grep",
      "Read(//**)",
      "Task",
      "WebFetch(domain:developer.hashicorp.com)",
      "WebFetch(domain:docs.astral.sh)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:stackoverflow.com)",
      "WebFetch(domain:discuss.hashicorp.com)",
      "WebFetch(domain:medium.com)",
      "WebFetch(domain:aws.amazon.com)",
      "WebFetch(domain:bugs.python.org)",
      "WebFetch(domain:boto3.amazonaws.com)",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Read(//**/*.key)",
      "Read(//**/*.pem)",
      "Read(//**/.env)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y ccstatusline@latest",
    "padding": 0
  },
  "alwaysThinkingEnabled": false,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 $HOME/source/dotfiles/claude/custom-perms.py"
          }
        ]
      }
    ]
  }
}
